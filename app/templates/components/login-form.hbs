<form onsubmit={{action "login"}}>
        {{#each errors as |error|}}
          <div class="error-alert" style="color: red;">{{error.detail}}</div>
        {{/each}}
        <div class="field">
          {{input type="text" placeholder="Email" value=email}}
        </div><br />

        <div class="field">
          {{input type="password" placeholder="Password" value=password}}
        </div>

        <div class="form-footer" style="margin-bottom: 2rem;">
          <button type="submit" class="yellowbutton">Login</button>
        </div>
      </form>

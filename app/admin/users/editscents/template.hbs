<div style="text-align: center; max-width: 20rem; margin: 2rem auto;">
<div id="scentschedule" class="" style="margin-top: 5rem; text-align: center;">
  <h3 style="border-bottom: 1px solid #f3a536; margin-bottom: 2rem; margin-top: 4rem;">Choose Scent</h3>
<form onsubmit={{action "saveForm"}}>
  {{#power-select options=scent selected=model.scent onchange=(action (mut model.scent)) as |scents|}} {{scents}} {{/power-select}}
  <button type="submit" class="yellowbutton" style="max-width: 10rem; margin: auto; margin-top: 2rem;">Submit</button>
</form>

<div style="margin-top: 2rem;">
  {{#link-to "admin.users.detail" currentUser.user.id class="yellowbutton"}}Back{{/link-to}}
</div>
</div>

</div>
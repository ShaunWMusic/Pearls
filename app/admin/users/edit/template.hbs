<div style="text-align: center; max-width: 20rem; margin: 2rem auto;">
  <h3 style="border-bottom: 1px solid #f3a536; margin-bottom: 2rem;">Edit Profile</h3>
<form onsubmit={{action "updateForm"}}>
  {{input class="" type="text" value=currentUser.user.email placeholder="Email"}}<br />
  {{input class="" type="text" value=currentUser.user.username placeholder="Username"}}<br />

    <button type="submit" class="yellowbutton">Save</button><br />
    <p style="margin-top: 2rem;">{{#link-to "admin.users.detail" currentUser.user.id}}<button class="yellowbutton">Back</button>{{/link-to}}</p>
</form>

</div>
